{
  "manifest_version": 2,
  "name": "Hoodvisor",
  "version": "1.0",
  "description": "Your Neighborhood Safety Guide.",
  "permissions": ["activeTab", "tabs", "https://www.zillow.com/*"],
  "web_accessible_resources": ["zipcode_data.json"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://d3js.org https://cdnjs.cloudflare.com; object-src 'self'"
}
